<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hbm">

    <class name="StationPoint" table="STATION_POINT">
        <id name="id" column="POINT_ID">
            <generator class="increment"/>
        </id>
        <property name="name" column="POINT_NAME"/>
        <property name="latitude"/>
        <property name="longitude"/>
        <property name="seaHeight"/>

        <set name="rsmcs" table="STATION_DELEGATION"  inverse="true">
            <key column="POINT_ID"/>
            <many-to-many column="RSMC_ID" class="Rsmc"/>
        </set>

        <!--<set name="winds" table="WIND">-->
            <!--<key column="POINT_ID"/>-->
            <!--<many-to-many column="WIND_ID" class="WareHouse"/>-->
        <!--</set>-->

        <set name="parts" table="WIND" cascade="all">
            <key column="WIND_ID" not-null="true"/>
            <one-to-many class="Wind"/>
        </set>

        <!--<map name="parts" cascade="all">-->
            <!--<key column="productId" not-null="true"/>-->
            <!--<map-key formula="partName"/>-->
            <!--<one-to-many class="Part"/>-->
        <!--</map>-->

