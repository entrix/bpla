<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="hbm">

    <class name="Rsmc" table="RSMC">
        <id name="id" column="RSMC_ID">
            <generator class="increment"/>
        </id>
        <property name="name" column="RSMC_NAME"/>
        <property name="type" column="RSMC_TYPE"/>


        <set name="points" table="STATION_DELEGATION">
            <key column="RSMC_ID"/>
            <many-to-many column="POINT_ID" class="StationPoint"/>
        </set>
    </class>

</hibernate-mapping>
